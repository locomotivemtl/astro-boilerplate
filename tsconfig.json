{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "Bundler",
        "paths": {
            "@root/*": [
                "./*"
            ],
            "@src/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@layouts/*": [
                "./src/layouts/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@scripts/*": [
                "./src/scripts/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@types/*": [
                "types/*"
            ]
        }
    }
}
