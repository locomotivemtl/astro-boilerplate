{
    "name": "@locomotivemtl/astro-boilerplate",
    "title": "Locomotive Boilerplate",
    "type": "module",
    "version": "1.0.0",
    "engines": {
        "node": "20.x",
        "npm": ">=8.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/locomotivemtl/astro-boilerplate.git"
    },
    "author": {
        "name": "Locomotive",
        "email": "info@locomotive.ca",
        "homepage": "https://locomotive.ca"
    },
    "scripts": {
        "prepare": "npx simple-git-hooks",
        "dev": "astro dev --host",
        "start": "astro dev --host",
        "build": "astro check && astro build",
        "preview": "astro preview",
        "astro": "astro",
        "format": "npx lint-staged",
        "generate": "npm run storyblok:components && npm run storyblok:types",
        "storyblok:components": "dotenv -c -- bash -c 'storyblok pull-components --space $STORYBLOK_SPACE_ID --path ./src/storyblok/'",
        "storyblok:types": "dotenv -c -- bash -c 'storyblok generate-typescript-typedefs --sourceFilePaths ./src/storyblok/components.$STORYBLOK_SPACE_ID.json --destinationFilePath ./types/component-types-sb.d.ts'"
    },
    "dependencies": {
        "@astrojs/check": "^0.9.4",
        "@locomotivemtl/component-manager": "^1.0.1",
        "@locomotivemtl/grid-helper": "^1.0.0",
        "@storyblok/astro": "^7.0.0",
        "@swup/head-plugin": "^2.3.1",
        "@swup/preload-plugin": "^3.2.11",
        "@swup/scripts-plugin": "^2.1.0",
        "astro": "^5.7.13",
        "astro-icon": "^1.1.5",
        "astro-seo": "^0.8.4",
        "lint-staged": "^15.5.1",
        "locomotive-scroll": "^5.0.0-beta.21",
        "nanostores": "^1.0.1",
        "swup": "^4.8.1",
        "tailwindcss": "^4.1.4",
        "ts-debounce": "^4.0.0",
        "typescript": "^5.8.3"
    },
    "devDependencies": {
        "@locomotivemtl/postcss-helpers-functions": "^1.0.2",
        "@tailwindcss/vite": "^4.1.4",
        "@vitejs/plugin-basic-ssl": "^1.2.0",
        "dotenv-cli": "^8.0.0",
        "postcss-utopia": "^1.1.0",
        "prettier": "^3.5.3",
        "prettier-plugin-astro": "^0.14.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "simple-git-hooks": "^2.13.0",
        "storyblok": "^3.35.2"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run format"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    }
}
