---
interface Props {
    tag?: 'div' | 'article',
    body?: string;
    class?: string;
}

const {
    tag = 'div',
    body = null,
    class: propsClass,
    ...rest
} = Astro.props;

const Tag = tag || 'div';
---

{Astro.slots.has('default') &&
    <Tag
        class:list={['c-wysiwyg', propsClass]}
        set:html={body}
        {...rest}
    >
        <slot/>
    </Tag>
}

<style is:global>
    @import 'Wysiwyg.scss';
</style>
